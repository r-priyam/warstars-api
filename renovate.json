{
    "extends": [
        "config:base",
        ":disablePeerDependencies",
        ":disableDependencyDashboard",
        "group:allNonMajor",
        ":semanticCommitTypeAll(chore)"
    ],
    "rangeStrategy": "bump",
    "packageRules": [
        {
            "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true,
            "automergeStrategy": "squash"
        }
    ]
}
